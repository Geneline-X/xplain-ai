// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  email String @unique
  File File[]
  Message Message[]

  monimeCustomerId String? @unique @map(name: "monime_customer_id") // Adjusted mapping
  monimeSubscriptionId String? @unique @map(name: "monime_subscription_id") // Adjusted mapping
  monimeSessionId String? @map(name: "monime_session_id") // New field for Monime session ID
  monimeUrl String? @map(name: "monime_url") // New field for Monime checkout URL
  monimeCurrentPeriodsEnd DateTime? @map(name: "monime_current_period_end") // Adjusted mapping
}

enum upLoadStatus {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}
model File {
  id String @id @default(cuid())
  name String 

  uploadStatus upLoadStatus @default(PENDING)

  url String
  key String
  message Message[]

  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User User? @relation(fields: [userId], references: [id])
  userId String?
}

model Message {
  id String @id @default(cuid())
  text String @db.Text()

  isUserMessage Boolean 

  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User? @relation(fields: [userId], references: [id])
  userId String?
  File File? @relation(fields: [fileId], references: [id])
  fileId String?

}